{
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(npm run:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(flutter:*)",
      "Bash(dart:*)",
      "Bash(firebase:*)",
      "Bash(gh:*)",
      "Bash(cd:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(cat:*)",
      "Read(web/**)",
      "Read(flutter/**)",
      "Read(.claude/**)",
      "Edit(web/**)",
      "Edit(flutter/**)",
      "Write(web/**)",
      "Write(flutter/**)",
      "Write(.claude/**)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Write(.env)",
      "Write(.env.*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'File modified: checking format...'"
          }
        ]
      }
    ]
  }
}
